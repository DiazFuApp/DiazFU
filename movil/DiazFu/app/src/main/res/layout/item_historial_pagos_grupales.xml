<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_plazo_historial_pago_grupal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1/16"
                android:textAlignment="center"
                android:textColor="@color/bootstrap_brand_secondary_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_monto_historial_pago_grupal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$18,000.00"
                android:textAlignment="center"
                android:textColor="@color/bootstrap_brand_success"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_fecha_programada_historial_pago_grupal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03/11/2017"
                android:textAlignment="center"
                android:textColor="@color/bootstrap_brand_secondary_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_estatus_historial_pago_grupal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pendiente"
                android:textAlignment="center"
                android:textColor="@color/bootstrap_brand_secondary_text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/item_btn_detalle_historial_plazo_pago_grupal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/ic_account_balance_black_48dp"
                android:backgroundTint="@color/bootstrap_brand_primary" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bootstrap_dropdown_divider" />

    </LinearLayout>

</FrameLayout>